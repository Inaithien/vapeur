
<div class="cards">
    {{#each games}}
    <article class="card">
        <h2>{{this.title}}</h2>
        
        <div class="content">
            <p>{{this.description}}</p>
            <p>Genre: {{this.genre.name}}</p>
            <p>Publisher: {{this.publisher.name}}</p>
        </div>
        
        <footer>
            <a href="/games/{{this.id}}" style="color: white; text-decoration: none;">View Details</a>
        </footer>
    </article>
    {{/each}}
</div>
<div class="navigation" style="max-width: 700px; margin: 1em auto;">
    <a href="/games/create" class="btn btn-primary">Create New Game</a>
    <a href="/" class="btn btn-secondary">Return Home</a>
    
</div>

<style>
body {
    font: 1.2em sans-serif;
}

.cards {
    max-width: 700px;
    margin: 1em auto;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(230px, 1fr));
    grid-gap: 20px;
}

.card {
    border: 1px solid #999;
    border-radius: 3px;
    display: grid;
    grid-template-rows: max-content 1fr max-content;
}

.card h2 {
    margin: 0;
    padding: 0.5rem;
}

.card .content {
    padding: 0.5rem;
}

.card footer {
    background-color: #333;
    color: #fff;
    padding: 0.5rem;
}

.navigation {
    display: flex;
    gap: 10px;
}
</style>