<div class="edit-publisher">
    <h2>Edit Publisher: {{publisher.name}}</h2>
    
    <form action="/publishers/{{publisher.id}}/edit" method="POST">
        <div>
            <label>Name:</label>
            <input type="text" name="name" value="{{publisher.name}}" required>
        </div>

        

        <button type="submit">Update Publisher</button>
    </form>
</div>  